<%= form_with(model: form, data: { turbo: false }) do |shop_form| %>
  <% if form.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
        <% form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= shop_form.label :name, style: "display: block" %>
    <%= shop_form.text_field :name %>
  </div>

  <div>
    <%= shop_form.label :address, style: "display: block" %>
    <%= shop_form.text_field :address %>
  </div>

  <h2> Books </h2>

  <div>
    <%= shop_form.fields_for :books do |book_form| %>
      <p><%= label_tag :title %>
      <p><%= book_form.text_field :title %>

      <p><%= label_tag :description %>
      <p><%= book_form.text_field :description %>
    <% end %>
  </div>
  <div>
    <%= shop_form.submit %>
  </div>
<% end %>
